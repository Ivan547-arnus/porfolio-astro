---
import me from "../assets/images/me.webp";
import "../assets/css/main.css";
import "../assets/css/fonts.css";
import "../assets/css/theme.css";
import { ViewTransitions } from "astro:transitions";
const { title, maxWidth = "600px" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ivan Villegas Rojas | Desarollador Full Stack | {title}</title>
    <link rel="icon" href={me.src} />
    <slot name="head" />
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"
    />
    <script is:inline src="/js/particles/particles.js"></script>
    <ViewTransitions />
  </head>
  <body>
    <div
      id="particles-js"
      style="position: fixed; width: 100%; height: 100%; z-index: -1"
    >
    </div>
    <div class="container" style={`max-width: ${maxWidth}`}>
      <slot />
    </div>
  </body>
</html>
