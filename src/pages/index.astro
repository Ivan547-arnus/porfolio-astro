	<meta  slot="head" name="title" content="Ivan Villegas Rojas | Desarollador Full Stack"/>
    <meta  slot="head" name="description" content="Desarrollador Full Stack con experiencia para crear aplicaciones web dinámicas y responsivas. Con una sólida formación en tecnologías de front-end y back-end." />

    <meta  slot="head" property="og:type" content="website" />
    <meta  slot="head" property="og:url" content="" />
    <meta  slot="head" property="og:title" content="Ivan Villegas Rojas | Desarollador Full Stack" />
    <meta  slot="head" property="og:description" content="Desarrollador Full Stack con experiencia para crear aplicaciones web dinámicas y responsivas. Con una sólida formación en tecnologías de front-end y back-end." />
    <meta  slot="head" property="og:image" content={me.src} />

    <meta  slot="head" property="twitter:card" content="summary_large_image" />
    <meta  slot="head" property="twitter:url" content="" />
    <meta  slot="head" property="twitter:title" content="Ivan Villegas Rojas | Desarollador Full Stack" />
    <meta  slot="head" property="twitter:description" content="Desarrollador Full Stack con experiencia para crear aplicaciones web dinámicas y responsivas. Con una sólida formación en tecnologías de front-end y back-end." />
